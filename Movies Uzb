import logging
from telegram import Update
from telegram.ext import Updater, CommandHandler, CallbackContext
import random

# Loglarni sozlash
logging.basicConfig(format='%(asctime)s - %(name)s - %(levelname)s - %(message)s', level=logging.INFO)
logger = logging.getLogger(__name__)

# Film tavsiyalari
movies = [
    "Inception (2010)",
    "The Shawshank Redemption (1994)",
    "The Godfather (1972)",
    "The Dark Knight (2008)",
    "Pulp Fiction (1994)"
]

def start(update: Update, context: CallbackContext) -> None:
    update.message.reply_text("Kino Botiga xush kelibsiz! Film tavsiyasi uchun /recommend ni bosing.")

def recommend(update: Update, context: CallbackContext) -> None:
    movie = random.choice(movies)
    update.message.reply_text(f"Qanday qilib: {movie} ni tomosha qilasiz?")

def main() -> None:
    # Bot tokenini kiriting
    updater = Updater("YOUR_TELEGRAM_BOT_TOKEN")

    # Handlerlarni ro'yxatdan o'tkazish
    dispatcher = updater.dispatcher
    dispatcher.add_handler(CommandHandler("start", start))
    dispatcher.add_handler(CommandHandler("recommend", recommend))

    # Botni boshlash
    updater.start_polling()

    # Botni to'xtatguncha ishlatish
    updater.idle()

if __name__ == '__main__':
    main()
